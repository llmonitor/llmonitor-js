{
  "name": "llmonitor",
  "version": "0.5.0",
  "description": "llmonitor is an open-source monitoring and analytics platform for AI apps.",
  "main": "dist/index.mjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsup src/index.ts src/openai.ts --format esm,cjs --dts && rm dist/index.d.mts"
  },
  "author": "llmonitor",
  "license": "Apache-2.0",
  "dependencies": {
    "unctx": "^2.3.1"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    },
    "./openai": {
      "types": "./openai.d.ts",
      "import": "./openai.mjs",
      "require": "./openai.js"
    }
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@types/node": "^20.5.1",
    "dotenv": "^16.3.1",
    "langchain": "^0.0.131",
    "openai": "^4.3.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "openai": "^4.3.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    }
  }
}
