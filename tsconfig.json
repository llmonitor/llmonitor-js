{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "classic",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib",
    "strict": false,
    "noEmitOnError": true,
    "paths": {
      "langchain/schema": ["./node_modules/langchain/schema"],
      "langchain/chat_models/openai": [
        "./node_modules/langchain/chat_models/openai"
      ],
      "langchain/callbacks": ["./node_modules/langchain/callbacks"],
      "openai": ["./node_modules/openai/dist"]
    }
  },

  "include": ["src/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
